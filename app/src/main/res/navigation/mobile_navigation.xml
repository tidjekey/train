<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_main">

    <fragment
        android:id="@+id/navigation_main"
        android:name="com.example.train.ui.main.MainFragment"
        android:label="Главное"
        tools:layout="@layout/fragment_main" />

    <fragment
        android:id="@+id/navigation_collection"
        android:name="com.example.train.ui.collection.CollectionFragment"
        android:label="Подборка"
        tools:layout="@layout/fragment_collection" />

    <fragment
        android:id="@+id/navigation_favourites"
        android:name="com.example.train.ui.favourites.FavouritesFragment"
        android:label="Коллекция"
        tools:layout="@layout/fragment_favourites" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.train.ui.profile.ProfileFragment"
        android:label="Профиль"
        tools:layout="@layout/fragment_profile" />
</navigation>